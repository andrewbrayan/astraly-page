---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Kanit:wght@100;200;300;400;500;600;700;800;900&display=swap');
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		body {
			@apply font-Kanit bg-slate-950 text-white overflow-x-hidden
		}
	}

	@layer components {
		.wrapper {
			@apply max-w-[375px] sm:max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl 2xl:max-w-screen-2xl mx-auto
		}

		.btn {
			@apply flex gap-2 py-2 px-6 w-fit rounded-full leading-none font-semibold
		}
	}
</style>
